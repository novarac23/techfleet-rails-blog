<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog_post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog_post.content %>
</p>

<hr />

<% @blog_post.comments.each do |comment| %>
  <p> <%= comment.title %> </p>
  <p> <%= comment.body %> </p>
  <hr />
<% end %>

<%= form_for @new_comment, url: comments_path(@new_comment) do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :body %>
  <%= f.hidden_field :blog_post_id, value: @blog_post.id %>  
  <%= f.submit %>
<% end %>

<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<%= link_to 'Back', blog_posts_path %>
